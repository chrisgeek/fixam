<% provide(:title, 'Sign Up | Gofixam')%>
  <div class="login_wrapper">


<div class="logo_icon">
<%=link_to  root_path do  %>
  <%=image_tag 'gopng.png', class:"img-thumbnail",id:"nav-icon",alt:'gofixam-logo'%>
<%end%>
</div>



<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),:html=>{class:"form-signin"}) do |f| %>

<%= render "header_settings" %>

  <%= f.error_notification %>

      <div id='fblogo'>

        <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to omniauth_authorize_path(resource_name, provider) do %>
          <%=image_tag 'signup.png',alt:'fb-signup',class:"img-thumbnail"%>
        <%end%>
      <% end -%>
    <% end -%>
      </div>

      <h4 class='or' >OR</h4>

<div class="form-inputs">


  	 <div class="row">
  		<div class="col-sm-6" style="margin-bottom:5px">
  		 <%= f.input :first_name, required: true, class:"form-control",label: false,placeholder:"First Name" %>
  		 </div>
  		<div class="col-sm-6">
	  <%= f.input :last_name, required: true,class:"form-control",label: false,placeholder:"Last Name" %> 
	  	</div>
	</div>

        <div class="gender_form">
  <%= f.input :gender, collection: [ ['Male', 'male'], ['Female', 'female']],label: false, as: :radio_buttons, item_label_class: "radio-inline", item_wrapper_tag: false%>

      </div>
<div class="form-group">
    <%= f.input :email, required: true,class:"form-control",label: false,placeholder:"Email Address"%>
 </div>

<div class="form-group">
    <%= f.input :phone_number, required: true,class:"form-control",label: false,placeholder:"Phone Number"%>
 </div>
   
 <div class="form-group">
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),class:"form-control",label: false,placeholder:"Password" %>
 </div>

 <div class="form-group">
    <%= f.input :password_confirmation, required: true,class:"form-control",label: false,placeholder:"Password Confirmation" %>
 </div>
 
<div class="form-group termofuse">
By clicking sign up, you agree to our <%=link_to "Terms of Use", terms_path %>
</div>


  <div class="form-actions">
    <%= f.button :submit, "Sign up",class:"btn btn-lg btn-primary btn-block" %>
  </div>

</div>

<% end %>


<div class="devise_login_links">
  <%= render "devise/shared/links" %>
  </div>
</div>


<%= render 'shared/footer_scroll2'%>
