<% provide(:title, 'Confirmation | Gofixam')%>
<div class="login_wrapper">
  <div class="logo_icon">
<%=link_to  home_index_path do  %>
  <%=image_tag 'gopng.png', class:"img-thumbnail",id:"nav-icon",alt:'gofixam-logo'%>
<%end%>
</div>

<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post },:html=>{class:"form-signin"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <h3 class="form-signin-heading">Resend confirmation instructions</h3>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Resend confirmation instructions",class:"btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<div class="devise_login_links">
  <%= render "devise/shared/links" %>
  </div>
</div>


<%= render 'shared/footer_scroll2'%>

