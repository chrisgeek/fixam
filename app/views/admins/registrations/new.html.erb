<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),:html=>{class:"form-signin"}) do |f| %>


  <%= f.error_notification %>
<div class="form-inputs">


<div class="form-group">
    <%= f.input :email, required: true,class:"form-control",label: false,placeholder:"Email Address"%>
 </div>

   
 <div class="form-group">
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),class:"form-control",label: false,placeholder:"Password" %>
 </div>

 <div class="form-group">
    <%= f.input :password_confirmation, required: true,class:"form-control",label: false,placeholder:"Password Confirmation" %>
 </div>
 
  <div class="form-actions">
    <%= f.button :submit, "Sign up",class:"btn btn-lg btn-primary btn-block" %>
  </div>

</div>

<% end %>


