<%
  meta title: "Admin Login | Gofixam" %>
  <div class="login_wrapper">
  <div class="logo_icon">
<%=link_to  home_index_path do  %>
  <%=image_tag 'gopng.png', class:"img-thumbnail",id:"nav-icon"%>
<%end%>
</div>



<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),:html=>{class:"form-signin"}) do |f| %>

<%= f.error_notification %>

  <div class="form-inputs">


    <%= f.input :email, required: true,placeholder:"admin@gofixam.com" %>
    <%= f.input :password, required: true,placeholder:"********" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in",class:"btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

</div>


<div class="devise_login_links">
  <%= render "devise/shared/links" %>
  </div>
</div>


<div id="footer">
  <div class="container">
    <p class="text-muted">Copyright Â©2016 KliqITal, Inc.</p>
  </div>
</div>



