<p id="notice"><%= notice %></p>

<p>
  <strong>State:</strong>
  <%= @state.state %>
</p>




<h1>Listing Cities</h1>

<table>
  <thead>
    <tr>
      <th>Cities</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td>
        	<%= link_to 'Destroy City', city,method: :delete,data: { confirm: 'Are you sure?' } %>

        </td>
        <td><%= link_to 'Show', city %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>







<h2>Add a city:</h2>
<%= form_for([@state, @state.cities.build]) do |f|
%>
<p>
<%= f.label :city %><br />
<%= f.text_field :city %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>

